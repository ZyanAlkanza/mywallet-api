generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id              Int      @id @default(autoincrement())
  user_name       String
  user_birthdate  DateTime?
  user_address    String?
  user_avatar     String?
  user_password   String?

  wallet          Wallets[]
  @@map("tbl_users")
}

model Subcategories {
  id                Int      @id @default(autoincrement())
  subcategory_name  String
  subcategory_icon  String?
  category_id       Int?

  category          Categories? @relation(fields: [category_id], references: [id])
  @@map("tbl_subcategories")
}

model Categories {
  id                Int      @id @default(autoincrement())
  category_name     String
  category_icon     String?
  category_status   String?

  subcategory       Subcategories[]
  @@map("tbl_categories")
}

model Pockets {
  id                Int      @id @default(autoincrement())
  pocket_name       String
  pocket_icon       String?
  wallet_id         Int?

  wallet            Wallets? @relation(fields: [wallet_id], references: [id])
  @@map("tbl_pockets")
}

model Wallets {
  id                Int      @id @default(autoincrement())
  wallet_name       String
  wallet_icon       String?
  show_balance      Boolean? @default(false)
  user_id           Int?

  pocket            Pockets[]
  user              Users? @relation(fields: [user_id], references: [id])
  @@map("tbl_wallets")
}
